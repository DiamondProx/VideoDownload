{
  "manifest_version": 3,
  "name": "Video Downloader Pro",
  "version": "1.0",
  "description": "Download videos (MP4, M3U8, etc.) from any website.",
  "permissions": [
    "webRequest",
    "declarativeNetRequest",
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["bilibili_inject.js"],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Video Downloader"
  }
}
